FROM $(backend.registryServer)/$(server.docker.base.tag):$(server.docker.base.version)
MAINTAINER $(server.maintainer)

ADD . /opt/docker/

# extra configs come here with special ones defined in the .teleport
# dockerEnv and some from the app automatically
$(dockerExtraConfig)

EXPOSE $(run.port)

RUN sh scripts/install.sh

CMD sh scripts/$(type.name)_start.sh
